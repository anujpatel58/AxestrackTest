<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/car_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/car_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_iv"
            android:layout_marginLeft="10dp"
            android:text="BMW X4"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/car_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_name_tv"
            android:layout_marginLeft="10dp"
            android:text="\u20b9 14.2 Lakh"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/details_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_price_tv"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">


            <TextView
                android:id="@+id/year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="2012"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@android:drawable/btn_star_big_off"/>

            <TextView
                android:id="@+id/km_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="20000 km"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@android:drawable/btn_star_big_off"/>

            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Petrol"
                android:textSize="14sp"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>